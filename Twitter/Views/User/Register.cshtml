@model UserModel
@{
    Layout = null;
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" />
<link rel="stylesheet" href="~/css/Style.css" />
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

<div class="d-flex justify-content-center mt-5">

    <div class="card border-0 box-shadow  p-4 text-center">
        <div class="card-body">
            <h3>Login</h3>
            <form class="mt-5" asp-action="Register">
                <div class="mb-3">
                    <div class="input-container">
                        <input type="text" required="" asp-for="userEmail"/>
                        <label>Email</label>
                    </div>
                    <div class="input-container">
                        <input type="text" required="" asp-for="username"/>
                        <label>username</label>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="input-container">
                        <input type="password" required="" asp-for="password" />
                        <label>Password</label>
                    </div>
                </div>
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">Check me out</label>
                </div>
                <button type="submit" class="btn btn-primary">Register</button>

            </form>
            
            <a asp-action="Login">or Login</a>
        </div>
    </div>
</div>
