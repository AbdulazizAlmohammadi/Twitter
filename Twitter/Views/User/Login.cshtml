@model UserModel
@{
    Layout = null;
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" />
<link rel="stylesheet" href="~/css/Style.css" />
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

<div class="d-flex justify-content-center mt-5 w-100">

    <div class="card border-0 box-shadow  p-4 text-center w-50">
        <div class="card-body">
            <div class="m-auto">
                <nav ><img src="~/img/twaiqer.png"  height= "100px"/></nav>
            </div>
            <h3 class="mt-4">Login</h3>
            <form class="mt-2" asp-action="LoginVerification">
                <div class="mb-3">
                    <div class="input-container">
                        <input type="text" required="" asp-for="userEmail"/>
                        <label>Email</label>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="input-container">
                        <input type="password" required="" asp-for="password"/>
                        <label>Password</label>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Login</button>

            </form>

            <a asp-action="Register">or regiser</a>
        </div>
    </div>
</div>
